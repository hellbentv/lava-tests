### Configuration
#####################################################################

domain=$1
playbook=https://git.linaro.org/infrastructure/kernel-ci-backend.git
workdir=ansible

### Functions
#####################################################################

### Runtime
#####################################################################

# Download playbook into a persistent location
mkdir -p /opt; cd /opt
git clone ${playbook} ${workdir}
cd ${workdir}/ansible

#execute playbook
echo "### Executing ansible-playbook"
useradd ubuntu
ansible-playbook -c local site.yml


#added to wait for the services to start
sleep 90

curl -o test http://localhost:80
lava-test-case http-server-verification --shell grep text test
